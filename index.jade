      <!-- Inputs -->
      #aBox
        h3 Matrix A
        input#A1(type="text" placeholder="Rows" required/)
        span X
        input#A2(type="text" placeholder="Coloums" required/)
        span.gap
      #bBox
        h3 Matrix B
        input#B1(type="text" placeholder="Rows" required/)
        span X
        input#B2(type="text" placeholder="Coloums" required/)
        span.gap
      button(onclick="check()") Submit
      #rowColoumnA
        <!--UserMade Boxes-->
      #rowColoumnB
        <!--UserMade Boxes-->
      #answer
        h3.answer#multiply
